<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".testingActivity">
    <TextView
        android:id = "@+id/displayTitle"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:text = "@string/coverageTitle"
        android:textSize = "18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/Stat_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id = "@+id/Stat_title"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text = "@string/stat_title"
        android:textSize = "18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayTitle"
        app:layout_constraintBottom_toTopOf="@+id/SNR_Up"
        />
    <TextView
        android:id = "@+id/SNR_Up"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text = "@string/SNR_up"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintRight_toLeftOf="@id/SNR_Down"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Stat_title"
        app:layout_constraintBottom_toTopOf="@id/peak_SNR_up"
        />
    <TextView
        android:id = "@+id/SNR_Down"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/SNR_down"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/SNR_Up"
        app:layout_constraintTop_toBottomOf="@+id/Stat_title"
        app:layout_constraintBottom_toTopOf="@id/peak_SNR_down"
        />
    <TextView
        android:id = "@+id/peak_SNR_up"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/peak_SNR_up"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SNR_Up"
        app:layout_constraintRight_toLeftOf="@id/peak_SNR_down"
        app:layout_constraintBottom_toTopOf="@id/avg_PWR_up"/>

    <TextView
        android:id = "@+id/peak_SNR_down"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/peak_SNR_down"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toRightOf="@id/peak_SNR_up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SNR_Down"
        app:layout_constraintBottom_toTopOf="@id/avg_PWR_down"/>

    <TextView
        android:id = "@+id/avg_PWR_up"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/avg_pwr_up"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/peak_SNR_up"
        app:layout_constraintRight_toLeftOf="@id/peak_SNR_down"
        app:layout_constraintBottom_toTopOf="@id/peak_PWR_up"/>
    <TextView
        android:id = "@+id/avg_PWR_down"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/avg_pwr_down"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toRightOf="@id/avg_PWR_up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/peak_SNR_down"
        app:layout_constraintBottom_toTopOf="@id/peak_PWR_down"/>
    <TextView
        android:id = "@+id/peak_PWR_up"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/peak_PWR_up"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avg_PWR_up"
        app:layout_constraintRight_toLeftOf="@id/peak_SNR_down"
        app:layout_constraintBottom_toTopOf="@id/start_stop"/>
    <TextView
        android:id = "@+id/peak_PWR_down"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/peak_pwr_down"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toRightOf="@id/peak_PWR_up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avg_PWR_down"
        app:layout_constraintBottom_toTopOf="@id/export"/>
    <Button
        android:id = "@+id/start_stop"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/start_stop"
        android:background="@color/green"
        app:layout_constraintBottom_toTopOf="@id/switch_config"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/peak_PWR_up"
        app:layout_constraintRight_toLeftOf="@id/export"/>
    <Button
        android:id = "@+id/export"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/export"
        android:background="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/peak_PWR_down"
        app:layout_constraintLeft_toRightOf="@id/start_stop"
        />
    <TextView
        android:id = "@+id/switch_config"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text = "@string/switch_config"
        android:textSize = "18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/rounded_corner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_stop"
        app:layout_constraintBottom_toTopOf="@id/cur_sector"
        />
    <TextView
        android:id = "@+id/cur_sector"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text = "@string/cur_sector"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="3dp"
        android:background="@drawable/rect_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_config"
        />
    <Spinner
        android:id="@+id/select_sector"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:hint = "@string/sector"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cur_sector"
        app:layout_constraintRight_toLeftOf="@id/ok_sector"
        />
    <Button
        android:id = "@+id/ok_sector"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="@string/ok"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        app:layout_constraintLeft_toRightOf="@id/select_sector"
        app:layout_constraintTop_toBottomOf="@id/cur_sector"
        app:layout_constraintRight_toLeftOf="@id/select_tower"
        />
    <Spinner
        android:id="@+id/select_tower"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text = "@string/tower"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cur_sector"
        app:layout_constraintLeft_toRightOf="@id/ok_sector"
        app:layout_constraintRight_toLeftOf="@id/ok_tower"/>
    <Button
        android:id = "@+id/ok_tower"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="@string/ok"
        android:textSize = "18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        app:layout_constraintLeft_toRightOf="@id/select_tower"
        app:layout_constraintTop_toBottomOf="@id/cur_sector"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>